{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/public/$1" },       // Static asset diakses via /static/
    { "src": "/(.*)", "dest": "api/index.js" }             // Semua route lain ke Express
  ]
}
